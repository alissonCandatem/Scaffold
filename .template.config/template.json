{
  "$schema": "http://json.schemastore.org/template",
  "author": "Seu Nome",
  "classifications": [ "Web", "API", "Clean Architecture", "DDD" ],
  "identity": "Scaffold.Template",
  "name": "Scaffold .NET Clean Architecture",
  "shortName": "scaffold",
  "sourceName": "Scaffold",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "Target framework",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0",
          "description": ".NET 8.0"
        }
      ],
      "defaultValue": "net8.0"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/.git/**",
            "**/.vs/**",
            "**/node_modules/**",
            "**/*.user",
            ".template.config/**"
          ]
        }
      ]
    }
  ]
}